# JS

var nome = prompt("Digite seu nome: ");
var valorEmBitcoin = prompt("Digite o valor em bitcoin: ");

var valorEmReal = valorEmBitcoin * 182080.5;
valorEmReal = valorEmReal.toFixed(2);

alert(nome + ", " + valorEmBitcoin + " bitcoins valem " + "R$ " + valorEmReal);

var corpo1 = "Terra";
var corpo2 = prompt(
  "Para ver uma curiosidade, digite a distância de um corpo celeste do sol em anos luz: "
);
var nomeDoCorpo = prompt("Qual o nome desse corpo? ");

var umAnoLuzMetro = 9500000000000000;

var distanciaTerraSolMetros = 150000000000;
var distanciaCorpo2SolMetros = umAnoLuzMetro * 18000000000;

var distanciaEmMetros = distanciaCorpo2SolMetros - distanciaTerraSolMetros;

alert(
  "A distância em metros entre " +
    nomeDoCorpo +
    " e a " +
    corpo1 +
    " é " +
    distanciaEmMetros +
    " metros."
);


